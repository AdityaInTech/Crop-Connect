<footer class="bg-success text-white py-4 mt-5">
  <div class="container text-center">
    <h4 class="fw-bold mb-2" style="letter-spacing: 0.5px;">
      {{footer.title}}
    </h4>

    <p class="mb-3" style="font-size: 15px; opacity: 0.9;">
      {{footer.tagline}}
    </p>

    <div class="my-3">
      {{#if footer.linkedinUrl}}
        <a href="{{footer.linkedinUrl}}" 
           target="_blank" 
           class="text-white mx-2"
           style="font-size: 22px;">
          <i class="fab fa-linkedin"></i>
        </a>
      {{/if}}

      {{#if footer.githubUrl}}
        <a href="{{footer.githubUrl}}" 
           target="_blank" 
           class="text-white mx-2"
           style="font-size: 22px;">
          <i class="fab fa-github"></i>
        </a>
      {{/if}}
    </div>

    <hr class="border-light mx-auto" style="width: 65%; opacity: 0.4;">
    <p class="mb-0" style="font-size: 14px; opacity: 0.9;">
      {{footer.copyright}}
    </p>
  </div>
</footer>
